{% extends "WPTournamentBundle::layout.html.twig" %}

{% block title %}
    Admin - {{ parent() }}
{% endblock %}

{% block bodyContent %}
    <div class="row" style="margin-top:50px">
        <div id="menuAdmin" class="col-md-3">
            <ul>
                <li><a href="{{ path('wp_tournament_adminEvent') }}">Event</a></li>
                <li><a href="{{ path('wp_tournament_adminUser') }}">Utilisateur</a></li>
                <li><a href="{{ path('wp_tournament_adminTeam') }}">Team</a></li>
                <li><a href="{{ path('wp_tournament_adminMessages') }}">Message</a></li>
            </ul>
        </div>
        <div class="col-md-6">
            <h1>Liste des utilisateurs</h1>
            <table>
                <tr>
                    <th>Pseudo</th>
                    <th>Derni√®re connexion</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.lastLogin | date('d/m/Y H:i') }}</td>
                        <td>{{ user.email }}</td>
                        <td><a href="{{ path('wp_tournament_adminUserBan',{'id':user.id}) }}">{% if user.enabled == 1 %}Bannir{% else %}Deban{% endif %}</a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}