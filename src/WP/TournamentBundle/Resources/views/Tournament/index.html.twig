{% extends "WPTournamentBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block bodyContent %}
    <!-- Header Carousel -->
    <header id="myCarousel" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <div class="fill" style="background-image:url('{{ asset('/img/SLIDERCWL2.jpg')}}');"></div>
                <div class="carousel-caption">
                    <h2></h2>
                </div>
            </div>
            <div class="item">
                <div class="fill" style="background-image:url('{{ asset('/img/SLIDECWL1.jpg')}}');"></div>
                <div class="carousel-caption">
                    <h2></h2>
                </div>
            </div>
            <div class="item">
                <div class="fill" style="background-image:url('{{ asset('/img/SLIDECWL3.jpg')}}');"></div>
                <div class="carousel-caption">
                    <h2></h2>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </header>

    <!-- Page Content -->
    <div class="container">
        {% if event != null %}
            <!-- Marketing Icons Section -->
            <div class="row">
                <div class="col-lg-12">
                    <img class="img-responsive" src="{{ asset(event.cover.webPath) }}" alt="{{ event.cover.alt }}">
                </div>

                <div>
                    <p>
                        TITRE : {{ event.title }}
                    </p>
                    <p>
                        DATE : {{ event.date | date('d/m/Y') }}
                    </p>
                    <p>
                        LIEU : {{ event.lieu }}
                    </p>
                    <p>
                        <a href="{{ path('wp_tournament_event', {'id':event.id}) }}">LIEN VERS L’évènement</a>
                    </p>
                </div>
            </div>
        {%endif%}
        <!-- /.row -->
    </div>
{% endblock %}
