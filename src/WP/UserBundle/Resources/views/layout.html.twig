{% extends "::layout.html.twig" %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <!-- Blog Search Well -->
        <div class="input-group">
            <form action="{{ path("wp_tournament_search") }}" method="get">
                <input name="keyword" type="text" class="form-control">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                </span>
                <div class="input-group2">
                    <label for="pro"><input type="radio" value="1" name="pro" id="pro" checked>  Pro</label>
                    <label for="amateur"><input type="radio" value="0" name="pro" id="amateur">  Amateur</label>
                </div>
            </form>
        </div>
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path("wp_tournament_homepage") }}">Start Bootstrap</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="{{ path("wp_tournament_homepage") }}">Accueil</a>
                    </li>
                    <li class="dropdown">
                        <a href="{{ path("wp_tournament_events") }}">Events</a>
                    </li>
                    <li>
                        <a href="{{ path("wp_tournament_contact") }}">Contact</a>
                    </li>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <li>
                            <a href="{{  path('wp_tournament_profil',{'user':app.user.username}) }}">{{ app.user.username }}</a>
                        </li>
                        <li>
                            <a href="{{ path('fos_user_security_logout') }}">DÃ©connexion</a>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path("fos_user_security_login") }}">Connexion</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    {% block bodyContent %}
    {% endblock %}

    <footer class="navbar navbar-inverse" role="navigation">
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Your Website 2014</p>
            </div>
        </div>
    </footer>
{% endblock %}